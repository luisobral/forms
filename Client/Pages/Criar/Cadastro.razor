@page "/Criar/Cadastro"
@using Forms.Shared
@using System.ComponentModel.DataAnnotations;



<h3>Cadastro do Usuário</h3>

<EditForm Model="usuario" OnSubmit="@Create">
    <DataAnnotationsValidator />
    <div class="form-group">
        <div class="form-row row" style="margin:30px 0">
            <div class="form-group col-md-3">
                <InputSelect class="form-control" @bind-Value="@usuario.Title">
                    <option value="">Selecione o seu Titulo...</option>
                    <option value="Senhor">Sr.</option>
                    <option value="Senhora">Sra.</option>
                </InputSelect>
                <ValidationMessage For="@(() => usuario.Title)" />
            </div>
            <div class="form-group col">
                <InputText class="form-control" placeholder="Primeiro Nome" @bind-Value="@usuario.First" />
                <ValidationMessage For="@(() => usuario.First)" />
            </div>
            <div class="form-group col">
                <InputText class="form-control" @bind-Value="@usuario.Last" placeholder="Ultimo Nome" />
                <ValidationMessage For="@(() => usuario.Last)" />
            </div>
        </div>
        <div class="form-row row" style="margin:30px 0">
            <div class="form-group col">
                <InputDate @bind-Value="usuario.Birthday" class="form-control" />
                <ValidationMessage For="@(() => usuario.Birthday)" />
            </div>
            <div class="form-group col">
                <InputText class="form-control" placeholder="Email" @bind-Value="@usuario.Email" />
                <ValidationMessage For="@(() => usuario.Email)" />
            </div>
            <div class="form-group col">
                <InputText class="form-control" type="password" placeholder="Senha" @bind-Value="@usuario.Password" />
                <ValidationMessage For="@(() => usuario.Password)" />
            </div>
            <div class="form-group col">
                <InputText class="form-control" type="password" placeholder="Confirmar a Senha" @bind-Value="@usuario.Confirm" />
                <ValidationMessage For="@(() => usuario.Confirm)" />
            </div>
        </div>
        <div class="form-group col">
            <InputCheckbox class="form-check-input" @bind-Value="@usuario.Terms"/>
            <label for="Terms" class="form-check-label">Aceitar os termos e condições de uso</label>
            <ValidationMessage For="@(() => usuario.Terms)" />
        </div>
    </div>
    <div class="form-row row">
        <div class="form-group col" style="text-align:right;">
            <button  style=" margin-left:20px; background-color:dodgerblue; color:aliceblue;" class="btn btn-submit" type="submit">Salvar</button>
        </div>
    </div>
</EditForm>

@code {
    private Usuario usuario = new Usuario();
    private void Create() {
        if (usuario.Password == usuario.Confirm)
        {
            Console.WriteLine($"Titulo : {usuario.Title}\nNome : {$"{usuario.First} {usuario.Last}"}\nData de Nascimento : {usuario.Birthday}\nEmail : {usuario.Email}\nSenha : {usuario.Password}");
            
        }
    }

}
